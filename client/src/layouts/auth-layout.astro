---
import BaseLayout from "@/layouts/base-layout.astro";
import Logo from "@/components/logo.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header class="w-full bg-white/50 backdrop-blur-md">
    <div class="container flex justify-between items-center h-14 mx-auto">
      <Logo />
    </div>
  </header>
  <main class="mx-36 flex items-center justify-center min-h-[550px]">
    <slot />
  </main>
</BaseLayout>
<script>
  import { getAuthToken } from '@/lib/utils/storage';

  const token = getAuthToken();
  if (token) window.location.href = "/dashboard";
</script>