---
import BaseLayout from "@/layouts/base-layout.astro";
import Logo from "@/components/logo.astro";
import UserDropdown from "@/components/user-dropdown.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header class="w-full bg-white/50 backdrop-blur-md shadow">
    <div class="container flex justify-between items-center h-14 mx-auto">
      <div class="flex gap-16 items-center">
        <Logo />
        <nav class="">
          <ul class="flex gap-8">
            <li class="text-gray-500">
              <a href="/dashboard" class="flex items-center">
                Dashboard
              </a>
            </li>
            <li class="text-gray-500">
              <a href="/dashboard/drafts" class="flex items-center">
                Drafts
              </a
              >
            </li>
          </ul>
        </nav>
      </div>
      <UserDropdown />
    </div>
  </header>
  <main class="mx-36">
    <slot />
  </main>
</BaseLayout>
<script>
  import { getAuthToken } from '@/lib/utils/storage';

  const token = getAuthToken();
  if (!token) window.location.href = "/login";
</script>