---
import { Icon } from "astro-icon";
import Button from "@/components/ui/button.astro";
import BaseLayout from "./base-layout.astro";
import Logo from "@/components/logo.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`Dashboard - ${title}`}>
  <header class="w-full bg-white/50 backdrop-blur-md shadow">
    <div class="container flex justify-between items-center h-14 mx-auto">
      <div class="flex gap-16 items-center">
        <Logo />
        <nav class="">
          <ul class="flex gap-8">
            <li class="text-gray-500">
              <a href="/dashboard" class="flex items-center">
                Dashboard
              </a>
            </li>
            <li class="text-gray-500">
              <a href="/dashboard/drafts" class="flex items-center">
                Drafts
              </a
              >
            </li>
          </ul>
        </nav>
      </div>
      <div class="flex items-center gap-4">
        <Button class="font-normal" variant="outline">
          <Icon name="tabler:user" class="w-4 h-4 mr-2" />
        </Button>
      </div>
    </div>
  </header>
  <main class="mx-36">
    <slot />
  </main>
</BaseLayout>